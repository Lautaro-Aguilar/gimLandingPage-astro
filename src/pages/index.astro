---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import {
  Astronav,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
  MenuIcon,
  MenuItems,
} from 'astro-navbar';
---

<Layout title='Welcome to Astro.'>
  <main>
    <header
      class='md:flex justify-between p-5 gap-5 mx-auto container fixed top-0 z-40'
    >
      <Astronav closeOnClick>
        <div class='flex w-full md:w-auto justify-between text-white'>
          <a class='uppercase'>gym24</a>
          <div class='block md:hidden'>
            <MenuIcon class='w-4 h-4 text-white' />
          </div>
        </div>
        <MenuItems class='hidden md:flex'>
          <ul class='flex flex-col md:flex-row md:gap-5 text-white'>
            <li>
              <a href='#'>Advantages</a>
            </li>
            <li>
              <a href='#'>Memberships</a>
            </li>
            <li>
              <li>
                <a href='#'>About</a>
              </li>
              <li>
                <a href='#'>Trainers</a>
              </li>
            </li>
          </ul>
        </MenuItems>
      </Astronav>
    </header>

    <section class='h-screen w-screen bg-black overflow-hidden relative'>
      <header class='z-30 relative text-center xs:w-1 md:w-72 h-36 pt-40'>
        <h2 class='text-white text-4xl font-medium'>
          Free trial session with a trainer
        </h2>
      </header>
      <footer>
        <a href='#'>Detailed</a>
      </footer>
      <div
        class='imagenFondo absolute shadow-imagenFondo z-10 brightness-50 -right-20 top-0 w-80 h-80 bg-cover bg-center object-cover bg-no-repeat'
      >
      </div>
    </section>
  </main>
</Layout>

<style>
  .imagenFondo {
    background-image: url('/man.jpg');
  }

  .test h2 {
    font-size: 40px;
  }
</style>
